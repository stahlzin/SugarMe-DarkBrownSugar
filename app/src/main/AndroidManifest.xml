        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".View.MainActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".View.PacienteActivity" />
        <activity android:name=".View.CadastroActivity" />
        <activity android:name=".View.MedicoActivity" />
        <activity
            android:name=".View.DiaryActivity"
            android:label="@string/title_activity_diary"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View.ResultsActivity"
            android:label="@string/title_activity_results" />
        <activity
            android:name=".View.MedicalInfoActivity"
            android:label="@string/title_activity_medical_info" />
        <activity
            android:name=".View.ComplicationActivity"
            android:label="@string/title_activity_complication" />
        <activity
            android:name=".PacienteActivity"
            android:label="@string/title_activity_paciente"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>