<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".View.PacienteActivity"
    tools:showIn="@layout/app_bar_paciente">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:columnCount="1"
            android:layout_weight="1"
            android:rowCount="1"
            android:useDefaultMargins="true"
            android:background="@color/colorPrimary"
            android:elevation="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@drawable/pacienteact"
            android:layout_row="0"
            android:layout_column="0"/>

            <Button
                android:id="@+id/novaEntradaButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/novaEntrada"
                android:layout_column="0"
                android:layout_row="0"
                android:padding="@dimen/fab_margin"
                android:layout_gravity="bottom"/>
        </GridLayout>

        <GridLayout
            android:id="@+id/ultimaLeituraGridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="1"
            android:useDefaultMargins="true"
            android:background="@color/colorBlank"
            android:layout_margin="@dimen/fab_margin"
            android:elevation="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                app:srcCompat="@drawable/leitor"
                android:layout_row="0"
                android:layout_column="0"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal">

                    <TextView
                        android:id="@+id/valorUltimaTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="900"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:textAppearance="@android:style/TextAppearance.Large"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        android:textAlignment="center"/>

                <GridLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:columnCount="1"
                    android:layout_margin="@dimen/fab_margin"
                    android:layout_weight="1"
                    android:rowCount="3"
                    android:layout_gravity="center"
                    android:useDefaultMargins="true">

                <TextView
                    android:id="@+id/statusUltimaTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:gravity="center"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textStyle="bold"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:text="NORMAL" />

                    <TextView
                        android:id="@+id/dataUltimaTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_column="0"
                        android:layout_row="1"
                        android:text="DATA" />

                    <TextView
                        android:id="@+id/horaUltimaTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_column="0"
                        android:layout_row="2"
                        android:text="HORA" />
                </GridLayout>
            </LinearLayout>
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:rowCount="1"
            android:useDefaultMargins="true"
            android:background="@color/colorSoftOrangeBackground"
            android:layout_margin="@dimen/fab_margin"
            android:elevation="10dp">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:text="GRAFICO"
                android:layout_gravity="top"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textStyle="bold"
                android:textAlignment="center"/>
        </GridLayout>

    </LinearLayout>
</ScrollView>