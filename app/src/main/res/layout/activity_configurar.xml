<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".View.ConfigurarActivity">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:rowCount="1"
        android:useDefaultMargins="true"
        android:background="@color/colorBlank"
        android:layout_margin="@dimen/fab_margin"
        android:elevation="10dp">

        <Switch
            android:id="@+id/aceitaChatswitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/fab_margin"
            android:text="@string/aceitaChat"
            android:textAppearance="@android:style/TextAppearance.Medium" />
    </GridLayout>

    <GridLayout
        android:id="@+id/compartilhaDiarioGridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:rowCount="1"
        android:useDefaultMargins="true"
        android:background="@color/colorBlank"
        android:layout_margin="@dimen/fab_margin"
        android:elevation="10dp">

        <Switch
            android:id="@+id/compartilhaDiarioSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/fab_margin"
            android:text="@string/compartilhaDiario"
            android:textAppearance="@android:style/TextAppearance.Medium" />
    </GridLayout>

    <TextView
        android:id="@+id/standardValuesTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/standarValues"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_marginBottom="0dp"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:layout_marginTop="@dimen/fab_margin"/>

    <GridLayout
        android:id="@+id/standardValuesGridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:useDefaultMargins="true"
        android:background="@color/colorBlank"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_marginBottom="@dimen/fab_margin"
        android:layout_marginTop="0dp"
        android:elevation="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/padHipo"
            android:padding="@dimen/fab_margin"
            android:textAppearance="@android:style/TextAppearance.Medium"/>

        <EditText
            android:id="@+id/padHipoEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="3"
            android:gravity="center"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/padHiper"
            android:padding="@dimen/fab_margin"
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <EditText
            android:id="@+id/padHiperEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="3"
            android:gravity="center"
            android:inputType="number" />
    </GridLayout>

    <Button
        android:layout_margin="@dimen/fab_margin"
        android:id="@+id/salvarAlterButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/salvarAlter"
        android:textColor="@color/colorBlank"
        android:background="@color/colorGreen"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:padding="15dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="1"
        android:useDefaultMargins="true"
        android:background="@color/colorBlank"
        android:layout_margin="@dimen/fab_margin"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sairAPP"
            android:layout_gravity="center"
            android:textAppearance="@android:style/TextAppearance.Medium" />
        <Button
            android:layout_margin="@dimen/fab_margin"
            android:id="@+id/logoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sair"
            android:textColor="@color/colorBlank"
            android:background="@color/colorRed"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:padding="10dp"/>

    </GridLayout>


</LinearLayout>
</ScrollView>
