<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <GridLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:layout_weight="1"
        android:rowCount="3"
        android:useDefaultMargins="true"
        android:background="@color/colorBlank"
        android:layout_margin="@dimen/fab_margin"
        android:elevation="10dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:layout_column="0"
            android:layout_row="0"
            app:srcCompat="@drawable/exame_icon" />

        <TextView
            android:id="@+id/dataExameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:text="TextView" />

        <ImageView
            android:id="@+id/deleteExameImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_gravity="top|end"
            app:srcCompat="@drawable/ic_delete_forever_black_24dp" />

        <TextView
            android:id="@+id/descricaoExameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_columnSpan="2"
            android:text="TextView" />

        <ImageView
            android:id="@+id/downloadExameImageView"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_gravity="top|end"
            app:srcCompat="@drawable/ic_file_download_black_24dp" />

        <ImageView
            android:id="@+id/shareExameImageView"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_gravity="top|end"
            app:srcCompat="@drawable/ic_share_black_24dp" />


        </GridLayout>

</LinearLayout>